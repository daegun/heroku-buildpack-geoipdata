#!/bin/sh

env_dir=$3
s3_bucket=`printenv GEO_S3_BUCKET`
s3_path=`printenv GEO_S3_PATH`
geo_download_path=`printenv GEO_DOWNLOAD_PATH`

if [ -e "$s3_bucket" ] && [ -e "$s3_path"]; then
  download_url="https://$s3_bucket.s3.amazonaws.com/$s3_path"
else
  download_url="http://geolite.maxmind.com/download/geoip/database/GeoLite2-City.mmdb.gz"
fi

[ -d $geo_download_path ] || mkdir $geo_download_path

wget --directory-prefix=$geo_download_path $download_url
gunzip $geo_download_path/GeoLite2-City.mmdb.gz

echo "GeoLite DB download and extraction complete!"